@page "/configuration/wifi"

<PageTitle>WiFi Networks</PageTitle>

<MudContainer Class="mt-8">
    @if (dbContext != null)
    {
        <MudDataGrid T="EF.Models.WiFiNetwork" Items="@dbContext.WiFiNetworks" Sortable="true" Filterable="true" RowClick="@OnRowClick">
            <ToolBarContent>
                <MudText Typo="Typo.h6">WiFi Networks</MudText>
                <MudSpacer />
                <MudButton Class="mr-2" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="@OnNewClick">New</MudButton>
            </ToolBarContent>
            <Columns>
                <Column T="EF.Models.WiFiNetwork" Field="ID" />
                <Column T="EF.Models.WiFiNetwork" Field="SSID" />
                <Column T="EF.Models.WiFiNetwork" Field="Password" />
            </Columns>
            <PagerContent>
                <MudDataGridPager T="EF.Models.WiFiNetwork" />
            </PagerContent>
        </MudDataGrid>
    }
</MudContainer>
